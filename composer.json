{
    "name": "signpostmarv/daft-router",
    "description": "Daft Router",
    "type": "library",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "SignpostMarv",
            "email": "me@signpostmarv.name"
        }
    ],
    "autoload": {
        "psr-4": {
            "SignpostMarv\\DaftRouter\\": "./src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "FastRoute\\": "./vendor/nikic/fast-route/test/",
            "SignpostMarv\\DaftInterfaceCollector\\Tests\\": "./vendor/signpostmarv/daft-interface-collector/Tests/",
            "SignpostMarv\\DaftRouter\\Tests\\": "./tests/daft-router/",
            "SignpostMarv\\DaftRouter\\Tests\\FastRoute\\": "./tests/fast-route/"
        }
    },
    "config": {
        "classmap-authoritative": true,
        "sort-packages": true
    },
    "scripts": {
        "tests": [
            "phpunit -vvvv --coverage-clover=phpunit.clover",
            "phpstan analyse -c ./phpstan.neon .php_cs.dist src tests",
            "psalm --find-dead-code",
            "phpcpd src",
            "phpmnd ./ --exclude=./phpunit/ --exclude=./vendor/ --non-zero-exit-on-violation --hint",
            "composer-require-checker check ./composer.json",
            "infection --min-msi=100",
            "php-cs-fixer fix --verbose --allow-risky=yes --dry-run"
        ]
    },
    "require": {
        "php": "^7.1",
        "ext-mbstring": "*",
        "nikic/fast-route": "^1.3",
        "signpostmarv/daft-interface-collector": "^1.1",
        "symfony/http-foundation": "^4.2"
    },
    "require-dev": {
        "infection/infection": "^0.12.2",
        "maglnet/composer-require-checker": "^2.0",
        "phpstan/phpstan": "^0.11.5",
        "phpstan/phpstan-phpunit": "^0.11.0",
        "phpstan/phpstan-strict-rules": "^0.11.0",
        "phpunit/phpunit": "^7.5",
        "povils/phpmnd": "^2.1",
        "psalm/plugin-phpunit": "^0.5.5",
        "roave/security-advisories": "dev-master",
        "sebastian/phpcpd": "^4.1",
        "signpostmarv/php-cs-fixer-config": "^0.9.0",
        "vimeo/psalm": "^3.2"
    }
}
