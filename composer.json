{
    "name": "signpostmarv/daft-router",
    "description": "Daft Router",
    "type": "library",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "SignpostMarv",
            "email": "me@signpostmarv.name"
        }
    ],
    "autoload": {
        "psr-4": {
            "SignpostMarv\\DaftRouter\\": "./src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "FastRoute\\": "./vendor/nikic/fast-route/test/",
            "SignpostMarv\\DaftInterfaceCollector\\Tests\\": "./vendor/signpostmarv/daft-interface-collector/Tests/",
            "SignpostMarv\\DaftRouter\\Tests\\": "./tests/daft-router/",
            "SignpostMarv\\DaftRouter\\Tests\\FastRoute\\": "./tests/fast-route/"
        }
    },
    "config": {
        "classmap-authoritative": true,
        "sort-packages": true
    },
    "scripts": {
        "tests": [
            "phpunit -vvvv --coverage-clover=phpunit.clover",
            "phpstan analyse -c ./phpstan.neon .php_cs.dist src tests",
            "psalm",
            "phpcpd src",
            "phpmnd src",
            "composer-require-checker check ./composer.json",
            "php-cs-fixer fix --verbose --allow-risky=yes --dry-run"
        ]
    },
    "require": {
        "php": "^7.1",
        "ext-mbstring": "*",
        "nikic/fast-route": "^1.3",
        "signpostmarv/daft-interface-collector": "^0.4.8",
        "symfony/http-foundation": "^4.1"
    },
    "require-dev": {
        "maglnet/composer-require-checker": "^1.1",
        "phpstan/phpstan": "^0.10.6",
        "phpstan/phpstan-phpunit": "^0.10.0",
        "phpstan/phpstan-strict-rules": "^0.10.1",
        "phpunit/phpunit": "^7.5",
        "povils/phpmnd": "^2.0",
        "roave/security-advisories": "dev-master",
        "sebastian/phpcpd": "^4.1",
        "signpostmarv/php-cs-fixer-config": "^0.5.1",
        "vimeo/psalm": "^3.0"
    }
}
